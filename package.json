{
  "name": "ts-games",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --watch",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:console",
    "test:console": "clear; ng test --karma-config karma-terminal.conf.js",
    "test:browser": "ng test --karma-config karma.conf.js",
    "lint": "ng lint",
    "install:plugin": "./scripts/install_local_plugin.sh",
    "ip": "npm run install:plugin",
    "update-version": "npm version patch",
    "uv": "npm run update-version",
    "extract-i18n": "ng extract-i18n --format json --output-path src/locale --out-file source.json",
    "ei": "npm run extract-i18n",
    "storybook:init": "node ./node_modules/.bin/storybook init",
    "storybook": "ng run ts-games:storybook  --no-open --loglevel verbose",
    "build-storybook": "ng run ts-games:build-storybook",
    "storybook:install-addon": "node ./node_modules/.bin/storybook add"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^19.2.18",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.14",
    "@angular/material": "^19.2.18",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/platform-server": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@material-design-icons/font": "^0.14.15",
    "@ngrx/signals": "^19.2.1",
    "@orion76/ng-plugin": "^0.0.9",
    "@orion76/plugin": "^0.1.12",
    "express": "^4.21.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/localize": "^19.2.14",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-onboarding": "^9.0.12",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/angular": "^9.0.12",
    "@types/express": "^4.17.23",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.19.112",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "19.6.0",
    "create-storybook": "^9.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-storybook": "^9.0.12",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-spec-reporter": "^0.0.36",
    "prettier-eslint": "^16.4.2",
    "storybook": "^9.0.12",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.33.1"
  }
}
